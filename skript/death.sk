on death of player:
    set {_x} to round(x-coordinate of victim)
    set {_y} to round(y-coordinate of victim)
    set {_z} to round(z-coordinate of victim)
    set {_world} to name of world of victim
    set {_msg} to "死亡位置：%{_x}%, %{_y}%, %{_z}% %{_world}%"

    wait 20 ticks

    make victim say "%{_msg}%"
